<%= form_for @presentation, as: :presentation, url: presentation_path(@presentation), method: :patch do |f| %>

  <div class="form-field">
  <%=f.label :title %>
  <%=f.text_field :title %>
  </div>

  <div class="form-field">
    <%=f.label :description%>
    <%=f.text_area :description %>
  </div>

  <div class="form-field">
    <%= f.label :video, "Video URL" %><br>
    <%= f.text_field :video %>
  </div>

  <div class="actions">
    <%= f.submit "Submit" %>
  </div>
<% end %>
